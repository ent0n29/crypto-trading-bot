<div class="alert alert-{{ alert.type|default('success') }} alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h5><i class="icon fas {% if alert.type|default('success') == 'success' %}fa-check{% else %}fa-ban{% endif %}"></i> {{ alert.title }}</h5>
    {% if alert.message is defined %}{{ alert.message }}{% endif %}
</div>